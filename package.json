{
  "name": "vue-lib-sfc-example",
  "version": "1.1.0",
  "description": "Example for build Vue SFC",
  "main": "./dist/vue-lib.common.js",
  "types": "./dist/types/index.d.ts",
  "license": "ISC",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js",
    "*.ts"
  ],
  "scripts": {
    "start": "yarn serve",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib ./src/index.ts && yarn build:esm",
    "build:esm": "tsc -m es6 --outDir ./dist/es6 --declaration true --declarationDir './dist/types'",
    "test:unit": "vue-cli-service test:unit",
    "coverage": "yarn test:unit --coverage",
    "webpack": "webpack"
  },
  "dependencies": {
    "vue": "2.5.17",
    "vue-class-component": "6.2.0",
    "vue-property-decorator": "7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@vue/cli": "3.0.1",
    "@vue/cli-plugin-typescript": "3.0.1",
    "@vue/cli-plugin-unit-jest": "3.0.1",
    "@vue/cli-service": "3.0.1",
    "@vue/test-utils": "^1.0.0-beta.24",
    "clean-webpack-plugin": "^0.1.19",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "4.9.0",
    "rimraf": "2.6.2",
    "sass-loader": "7.0.3",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1",
    "vue-jest": "^2.6.0",
    "vue-template-compiler": "^2.5.17",
    "webpack-cli": "^3.0.8"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}